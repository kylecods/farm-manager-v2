@inherits MvvmComponentBase<LoginViewModel>


<EditForm Model="@ViewModel" OnValidSubmit="@(() => ViewModel.LoginSubmitCommand.Execute(NavigationManager))" FormName="farm_login">
    <DataAnnotationsValidator />
    <HxInputText Label="Email" Type="InputType.Email" @bind-Value="@ViewModel.Email" Placeholder="Enter Email"/>
    <HxInputText Label="Password" Type="InputType.Password" @bind-Value="@ViewModel.Password" Placeholder="Enter Password"/>
    
    <HxCheckbox Label="Remember Me" Inline="true" @bind-Value="@ViewModel.RememberMe"/>
    @if (ViewModel.IsBusy)
    {
        <HxSpinner Type="SpinnerType.Grow" />
    }
    else
    {
        <HxSubmit Text="Login" Color="ThemeColor.Success" CssClass="btn-block"/>
    }
</EditForm>
